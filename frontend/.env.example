# Printosk Frontend Configuration

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_SUPABASE_URL.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Razorpay Configuration
NEXT_PUBLIC_RAZORPAY_KEY=rzp_test_xxxxx  # Test key, replace with live in production
RAZORPAY_SECRET=rzp_test_secret_xxxxx

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Payment Configuration
NEXT_PUBLIC_CURRENCY=INR
NEXT_PUBLIC_MIN_ORDER_AMOUNT=100  # In cents (100 = INR 1)

# Feature Flags
NEXT_PUBLIC_MOCK_MODE=false  # Set to true for testing without Razorpay/Supabase
