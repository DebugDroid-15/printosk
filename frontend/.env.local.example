# Printosk Frontend Configuration - Local Development
# Copy this file to .env.local and fill in your actual values

# Supabase Configuration
# Get these from your Supabase project settings at https://supabase.com/dashboard
NEXT_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Razorpay Configuration
# Test keys from https://dashboard.razorpay.com/#/app/keys
NEXT_PUBLIC_RAZORPAY_KEY=rzp_test_xxxxx
RAZORPAY_SECRET=rzp_test_secret_xxxxx

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Payment Configuration
NEXT_PUBLIC_CURRENCY=INR
NEXT_PUBLIC_MIN_ORDER_AMOUNT=100

# Feature Flags
NEXT_PUBLIC_MOCK_MODE=true
